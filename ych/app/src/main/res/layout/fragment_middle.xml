<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MiddleFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1sp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="造画"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_add1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_bg_img"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:src="@drawable/icon_add"
            android:layout_alignParentRight="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/gallery1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/tk1"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="图库"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/camera1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/sxt"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:layout_marginLeft="80dp"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:text="摄像头"/>
        </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/style"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
</LinearLayout>

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ly"
    android:visibility="invisible">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/style1"
            android:id="@+id/style1"


            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/style2"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:background="@drawable/style2"
        />
</LinearLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/style3"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:background="@drawable/style3"
        />
</LinearLayout><LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/style4"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:background="@drawable/style4"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/style5"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/style6"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/style6"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/style5"
            />
    </LinearLayout>
</LinearLayout>
</HorizontalScrollView>
</LinearLayout>
    <!-- TODO: Update blank fragment layout -->


</FrameLayout>