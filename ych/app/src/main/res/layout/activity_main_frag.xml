<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--<include layout="@layout/layout_top" />-->

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/rg_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:background="@color/transparent_bg"
            android:orientation="horizontal"

            >

            <RadioButton
                android:drawableTop="@drawable/test1"
                android:id="@+id/rb_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="造画"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/list"
                />
            <RadioButton
                android:drawableTop="@drawable/test2"
                android:id="@+id/rb_person"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="C&amp;D"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/list"
                />
            <RadioButton
                android:drawableTop="@drawable/test"
                android:id="@+id/rb_person1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="我们"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/list"
                />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>